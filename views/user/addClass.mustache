<!DOCTYPE html>
<html lang="en">
<head>
  {{> header }}
  <style>
    html, body {
      height: 100%;
      margin: 0;
    }

    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    main {
      flex: 1;
    }

    .form-container {
      max-width: 600px;
      background: #fff;
      padding: 30px;
      margin: 50px auto;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    h2 {
      text-align: center;
      color: #914949;
      margin-bottom: 30px;
    }

    .btn-primary {
      background-color: #1985A1;
      border: none;
    }

    .btn-primary:hover {
      background-color: #EDB6A3;
      color: #fff;
    }
  </style>
</head>

<body>
  <main class="container">
    <div class="form-container">
      <h2>{{title}}</h2>
      <form method="POST" action="/courses/{{courseId}}/classes">
        <div class="form-group">
          <label for="date">Class Date</label>
          <input type="date" class="form-control" name="date" required>
        </div>
        <div class="form-group">
          <label for="time">Class Time</label>
          <input type="time" class="form-control" name="time" required>
        </div>
        <div class="form-group">
          <label for="classDescription">Class Description</label>
          <input type="text" class="form-control" name="classDescription" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-3">Add Class</button>
      </form>
    </div>
  </main>

  {{> footer }}
</body>
</html>