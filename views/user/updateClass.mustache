<!DOCTYPE html>
<html lang="en">
<head>
  {{> header }}
  <style>
    html, body {
      height: 100%;
      margin: 0;
    }
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    main {
      flex: 1;
    }
    .form-container {
      max-width: 600px;
      margin: 50px auto;
      padding: 30px;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }
    h2 {
      text-align: center;
      color: #914949;
    }
  </style>
</head>
<body>
  <main>
    <div class="form-container">
      <h2>{{title}}</h2>
      <form method="POST" action="/courses/{{courseId}}/classes/{{classIndex}}?_method=PUT">
        <div class="form-group">
          <label for="date">Class Date</label>
          <input type="date" class="form-control" name="date" value="{{classData.date}}" required>
        </div>

        <div class="form-group">
          <label for="time">Class Time</label>
          <input type="time" class="form-control" name="time" value="{{classData.time}}" required>
        </div>

        <div class="form-group">
          <label for="classDescription">Class Description</label>
          <input type="text" class="form-control" name="classDescription" value="{{classData.classDescription}}" required>
        </div>

        <button type="submit" class="btn btn-primary btn-block mt-3">Update Class</button>
      </form>
    </div>
  </main>
  {{> footer }}
</body>
</html>